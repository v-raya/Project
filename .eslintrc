{
  "extends": [
    "standard",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "jasmine",
    "standard",
    "babel"
  ],
  "globals": {
    "document": true,
    "window": true,
    "sessionStorage": true,
    "fetch": false
  },

  "rules": {
    "babel/no-invalid-this": 1,
    "consistent-return": [2],
    "dot-notation": [2],
    "func-names": [2],
    "func-style": [2, "declaration", { "allowArrowFunctions": true }],
    "jsx-a11y/no-autofocus": 1,
    "jsx-a11y/label-has-for": [
      2,
      {
        "components": ["label"],
        "required": {
          "some": ["nesting", "id"]
        },
        "allowChildren": true
      }
    ],
    "jsx-a11y/tabindex-no-positive": [2],
    "jsx-a11y/no-onchange": 0,
    "no-console": [2],
    "no-implicit-coercion": [2],
    "no-invalid-this": [2],
    "no-lonely-if": [2],
    "no-loop-func": [2],
    "no-magic-numbers": [1, { "enforceConst": true, "ignore": [-1,0,1,2] }],
    "no-native-reassign": [2],
    "no-spaced-func": [2],
    "no-unused-vars": [0, { "vars": "local", "args": "after-used", "ignoreRestSiblings": false }],
    "no-var": [2],
    "no-void": [2],
    "object-curly-spacing": 0,
    "prefer-const": [2],
    "prefer-template": [2],
    "radix": [2, "as-needed"],
    "react/require-extension": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "semi": [2, "never"]
  },
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  }
}
