{
  "extends": [
    "standard"
  ],
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "jasmine",
    "standard",
    "babel"
  ],
  "globals": {
    "document": true,
    "window": true,
    "sessionStorage": true,
    "fetch": false
  },

  "rules": {
    "babel/no-invalid-this": 1,
    "consistent-return": [2],
    "dot-notation": [2],
    "object-curly-spacing": 0,
    "no-invalid-this": [2],
    "no-unused-vars": [0, { "vars": "local", "args": "after-used", "ignoreRestSiblings": false }],
    "react/require-extension": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  },
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true,
      "modules": true
    },
    "sourceType": "module"
  }
}
